<div class="container" style="margin-top:70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Listado de Productos</h3>

        <div style="padding: 10px;">
            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#addUserModal">
                Nuevo Producto
            </button>
        </div>

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Año de lanzamiento</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.descripcion}}</td>
                    <td>{{this.precio}}</td>
                    <td>{{this.año_lanzamiento}}</td>
                    <td>
                        <div>
                            <button class="btn btn-warning p-2" data-bs-toggle="modal" data-bs-target="#editProductModal" onclick="populateEditModal({{this.Id}}, '{{this.nombre}}', '{{this.descripcion}}', {{this.precio}}, '{{this.año_lanzamiento}}')">
                                <i class="fa-solid fa-pencil"></i>Actualizar
                            </button>
                            <button class="btn btn-danger p-2" onclick="confirmDelete('{{this.Id}}')">
                                <i class="fa-solid fa-trash"></i>Eliminar
                            </button>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">REGISTRO DE PRODUCTOS</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

{{> product-modal}}
{{> edit-product-modal}}

<script>
function populateEditModal(id, nombre, descripcion, precio, año_lanzamiento) {
    document.getElementById('editProductId').value = id;
    document.getElementById('editNombre').value = nombre;
    document.getElementById('editDescripcion').value = descripcion;
    document.getElementById('editPrecio').value = precio;
    document.getElementById('editAñoLanzamiento').value = año_lanzamiento;
}


