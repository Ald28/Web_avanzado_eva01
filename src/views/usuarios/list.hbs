<div class="container" style="margin-top:70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Listado de Usuarios</h3>

        <div style="padding: 10px;">
            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#addUserModal">
                Nuevo Usuario
            </button>
        </div>

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Email</th>
                    <th scope="col">Nro. Teléfono</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each usuarios}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.apellido}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.telefono}}</td>
                    <td>
                        <div>
                            <button class="btn btn-warning p-2" data-bs-toggle="modal" data-bs-target="#editUserModal" onclick="populateEditModal({{this.Id}}, '{{this.nombre}}', '{{this.apellido}}', '{{this.email}}', '{{this.telefono}}')">
                                <i class="fa-solid fa-pencil"></i>Actualizar
                            </button>
                            <button class="btn btn-danger p-2" onclick="confirmDelete('{{this.Id}}')">
                                <i class="fa-solid fa-trash"></i>Eliminar
                            </button>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">REGISTRO DE USUARIOS</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

{{> user-modal}}
{{> edit-user-modal}}

<script>
function populateEditModal(id, nombre, apellido, email, telefono) {
    document.getElementById('editUserId').value = id;
    document.getElementById('editNombre').value = nombre;
    document.getElementById('editApellido').value = apellido;
    document.getElementById('editEmail').value = email;
    document.getElementById('editTelefono').value = telefono;
}

